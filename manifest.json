{
    "manifest_version": 2,

    "name": "Draw in twitch chat",
    "description": "This extension will help you to draw ASCII img for twitch chat",
    "version": "1.0",
    "content_scripts": [{
        "matches": ["https://www.twitch.tv/*"],
        "css": ["drawer.css"],
        "js": ["content.js"]
    }],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "activeTab"
    ]
}